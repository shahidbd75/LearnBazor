@page "/counter"

@attribute [StreamRendering]

<PageTitle>Counter</PageTitle>

<h3>Counter</h3>

<p>Current Count: @Count</p>

@code {
    public int Count { get; set; } = 10;

    protected override async Task OnInitializedAsync()
    {    

        for(int i = 0; i<10;i++)
        {
            await Task.Delay(1000);
            this.Count--;
            StateHasChanged();
        }
    }
}
